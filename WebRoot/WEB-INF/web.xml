<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>IndexController</servlet-name>
    <servlet-class>controller.IndexController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BlackboardController</servlet-name>
    <servlet-class>controller.BlackboardController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BlackboardService</servlet-name>
    <servlet-class>service.BlackboardService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>controller.UserController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CMSController</servlet-name>
    <servlet-class>controller.CMSController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DataController</servlet-name>
    <servlet-class>controller.DataController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileController</servlet-name>
    <servlet-class>controller.FileController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserInfoController</servlet-name>
    <servlet-class>controller.UserInfoController</servlet-class>
  </servlet>









  <servlet-mapping>
    <servlet-name>IndexController</servlet-name>
    <url-pattern>/index/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BlackboardController</servlet-name>
    <url-pattern>/blackboard/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CMSController</servlet-name>
    <url-pattern>/cms/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DataController</servlet-name>
    <url-pattern>/data/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileController</servlet-name>
    <url-pattern>/file/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserInfoController</servlet-name>
    <url-pattern>/userinfo/*</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>LogFilter</filter-name>
    <filter-class>filter.LogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LogFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  

  <welcome-file-list> 
	<welcome-file>/WEB-INF/views/index.jsp</welcome-file> 
  </welcome-file-list> 
</web-app>